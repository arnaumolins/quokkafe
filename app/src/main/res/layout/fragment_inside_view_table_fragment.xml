<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.inside_view_table_fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tableNumberPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="30dp"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:text="Table number: "
            android:textSize="30sp"
            android:textStyle="bold"

            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="30dp">

        </TextView>

        <ImageView
            android:id="@+id/tableImagePlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="118dp">

        </ImageView>

        <TextView
            android:id="@+id/tableAvailabilityPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="30dp"
            android:text="Availability"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="261dp">

        </TextView>

        <ListView
            android:id="@+id/bookingAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="294dp">

        </ListView>

        <TextView
            android:id="@+id/tableCostumersPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="30dp"
            android:text="Number of customers"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="306dp">

        </TextView>

        <DatePicker
            android:id="@+id/startingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:gravity="center"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="365dp">

        </DatePicker>

        <TimePicker
            android:id="@+id/startingHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:gravity="center"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="675dp">

        </TimePicker>

        <DatePicker
            android:id="@+id/endingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:gravity="center"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="922dp">

        </DatePicker>

        <TimePicker
            android:id="@+id/endingHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:gravity="center"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="1225dp">

        </TimePicker>

        <Button
            android:id="@+id/tableBookingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="1533dp"
            android:text="BOOK TABLE"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>