<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.user_interface_fragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userNamePlaceHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="50dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Username"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/emailPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Email"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/agePlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Age"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/interestsPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="User interests"
        android:textSize="15sp"/>


    <ListView
        android:id="@+id/itemListPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/sign_out_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:text="SIGN OUT"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"/>

</LinearLayout>